@using Core.Helper
@using Core.Models
@model PageResult<LessonTime>
@{
    int count = 1+((Model.PageNumber-1)*20);
}
<div class="container">

    <h1>Lesson Times</h1>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>
<div class="container justify-content-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Lesson</th>
                <th scope="col">Teacher</th>
                <th scope="col">Group</th>
                <th scope="col">Date</th>
                

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Lesson.Name</td>

                    <td>@item.Lesson.TeacherUser.Name</td>
                    <td>@item.Lesson.Group.Name</td>
                    <td>@item.Date</td>
                    <td>
                        <a class="btn btn-info" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-warning" asp-action="Details" asp-controller="Group" asp-route-id="@item.Lesson.GroupId">Group</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>

                count++;
            }

        </tbody>
    </table>
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Next</a>
            </li>
        </ul>
    </nav>
    <div asp-validation-summary=All class="text-danger"></div>
</div>
