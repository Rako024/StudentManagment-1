@using Business.DTOs.Admin

@model TeacherUpdatePasswordDto
<div class="container justify-content-center">
    <form method="post" enctype="multipart/form-data">


        <div class="mb-3">
            <label asp-for="CurrentPassword" class="form-label">Current Password</label>
            <input asp-for="CurrentPassword" class="form-control">
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NewPassword" class="form-label">New Password</label>
            <input asp-for="NewPassword" class="form-control">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConNewPassword" class="form-label">Repeat Password</label>
            <input asp-for="ConNewPassword" class="form-control">
            <span asp-validation-for="ConNewPassword" class="text-danger"></span>
        </div>

        <div asp-validation-summary=All>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>