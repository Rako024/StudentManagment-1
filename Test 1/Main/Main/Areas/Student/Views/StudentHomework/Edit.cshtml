@using Business.DTOs.Teacher.Homeworks
@model HomeworkSubmissionDto

@{
    ViewData["Title"] = "Submit Homework";
}

<h2>Submit Homework</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link"></label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="File"></label>
        <input type="file" asp-for="File" class="form-control" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <input asp-for="HomeworkId" value="@Model.HomeworkId" hidden />
    <input asp-for="StudentUserId" value="@Model.StudentUserId" hidden />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
