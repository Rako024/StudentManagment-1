@using Core.Models


@model LearningMaterial

@{
    ViewData["Title"] = "Add Learning Material";
}
<div class="page-wrapper">
    <div class="container mt-5 d-flex justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">

                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Material Details</h2>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <h1>@Model.Name</h1>
                    </div>
                    @if(!string.IsNullOrEmpty( Model.Link)){
                        <div class="form-group mb-3">
                        <a href="@Model.Link" class="btn btn-success">Materail Link</a>
                        </div>
                    }
                    @if(!string.IsNullOrEmpty(Model.FileUrl)){
                        <div class="form-group mb-3">
                        <a href="~/upload/learningmaterials/@Model.FileUrl" class="btn btn-primary">View Matrial</a>
                        <a href="~/upload/learningmaterials/@Model.FileUrl" class="btn btn-info" download>Download Matrial</a>
                        </div>
                    }
                    <div class="form-group mb-3">
                    <a class="btn btn-secondary m-1 col-md-2 mb-3" asp-action="Index" asp-controller="LearningMaterial" asp-route-lessonId="@Model.LessonId">Back to page</a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>